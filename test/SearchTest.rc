#include <Windows.h>

1 MENU
LANGUAGE LANG_ENGLISH, SUBLANG_DEFAULT
{
    POPUP "&File"
    {
        MENUITEM "L&oad…\tCtrl+O", 0xC0
        MENUITEM SEPARATOR
        MENUITEM "Exi&t\tAlt+F4", IDCLOSE
    }

    POPUP "&About"
    {
        MENUITEM "&Source code…\tF1", 0xF1
    }
}

1 ACCELERATORS
{
    "^O", 0xC0 // Ctrl+O
    VK_F1, 0xF1, VIRTKEY
}

